<article class="product">
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>

  <div>
  <% if product.quantity == 0 %>
    <button class='soldout'>Sold Out</button>
    <button class='btn' style="background-color: rgba(36, 117, 54, 0.587);"><%= fa_icon "shopping-cart" %> Add</button>

  <% else %>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-add-to-cart', method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>
  <% end %>
</div>

</article>
