<section class="orders-show">
    <header class="page-header">
      <h1>Order #<%= @order.id %></h1>
    </header>

    <div>
    <h4>Thank you for your order!</h4>
    <p>Your total is <%= humanized_money_with_symbol @order.total %>. A confirmation email has been sent to <%= @order.email %>.</p>
    </div>

    <div class="order-details">
    <div class="row">
      <div class="col-md-8">
        <% @order.line_items.each do |line_item| %>
          <%= render partial: 'line_item', locals: { line_item: line_item, quantity: line_item[:quantity].to_i } %>
        <% end %>
      </div>


    </div>
  </div>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>